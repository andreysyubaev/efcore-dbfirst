<Page x:Class="efcore_dbfirst.Pages.AddPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:efcore_dbfirst.Pages"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:converter="clr-namespace:efcore_dbfirst.Converters"
      mc:Ignorable="d" 
      DataContext="{Binding RelativeSource={RelativeSource Self}}"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddPage" Loaded="LoadList">

    <Page.Resources>
        <converter:TagConverter x:Key="tagConverter"/>
        <converter:ProductStockBorderConverter x:Key="borderConverter"/>
    </Page.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <TabControl Grid.Row="0">
            <TabItem Header="Товар">
                <TabItem.Content>
                    <Grid Margin="4">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <Button Click="GoAddProductPage" Content="Добавить" Grid.Row="1"/>
                    </Grid>
                </TabItem.Content>
            </TabItem>
            <TabItem Header="Категория">
                <TabItem.Content>
                    <Grid Margin="4">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <Button Click="GoAddCategoryPage" Content="Добавить" Grid.Row="1"/>
                        <ListView Grid.Column="1"
                                  ItemsSource="{Binding categories}" Name="CategoriesList"
                                  HorizontalContentAlignment="Stretch"
                                  MouseDoubleClick="CategoriesList_MouseDoubleClick"
                                  SelectedItem="{Binding category}">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock>
                                        <Run Text="ID: "/>
                                        <Run Text="{Binding Id}"/>
                                        <Run Text=" | "/>
                                        <Run Text="Название: "/>
                                        <Run Text="{Binding Name}"/>
                                    </TextBlock>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </TabItem.Content>
            </TabItem>
            <TabItem Header="Тег">
                <TabItem.Content>
                    <Grid Margin="4">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <Button Click="GoAddTagPage" Content="Добавить" Grid.Row="1"/>
                        <ListView Grid.Column="1"
                                  ItemsSource="{Binding tags}" Name="TagsList"
                                  HorizontalContentAlignment="Stretch"
                                  MouseDoubleClick="TagsList_MouseDoubleClick"
                                  SelectedItem="{Binding tag}">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock>
                                        <Run Text="ID: "/>
                                        <Run Text="{Binding Id}"/>
                                        <Run Text=" | "/>
                                        <Run Text="Название: "/>
                                        <Run Text="{Binding Name}"/>
                                    </TextBlock>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </TabItem.Content>
            </TabItem>
            <TabItem Header="Бренд">
                <TabItem.Content>
                    <Grid Margin="4">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <Button Click="GoAddBrandPage" Content="Добавить" Grid.Row="1"/>

                        <ListView Grid.Column="1"
                                  ItemsSource="{Binding brands}" Name="BrandsList"
                                  HorizontalContentAlignment="Stretch"
                                  MouseDoubleClick="BrandsList_MouseDoubleClick"
                                  SelectedItem="{Binding brand}">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock>
                                        <Run Text="ID: "/>
                                        <Run Text="{Binding Id}"/>
                                        <Run Text=" | "/>
                                        <Run Text="Название: "/>
                                        <Run Text="{Binding Name}"/>
                                    </TextBlock>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </TabItem.Content>
            </TabItem>
        </TabControl>

        <Button Grid.Row="1" Click="Back" Content="Назад"/>
    </Grid>
</Page>
