<Page x:Class="efcore_dbfirst.Pages.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:efcore_dbfirst.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StartPage">

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel>
            <Label Content="Выберите роль"
                   HorizontalContentAlignment="Center"
                   FontSize="32" FontWeight="SemiBold"
                   Margin="16"/>
            <WrapPanel>
                <Button Click="UserLogin" Content="Войти как посетитель" Margin="4"/>
                <Button Click="ManagerLogin" Content="Войти как менеджер" Margin="4"/>
            </WrapPanel>
        </StackPanel>
       
    </Grid>
</Page>
