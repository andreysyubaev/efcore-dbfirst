<Application x:Class="efcore_dbfirst.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:efcore_dbfirst"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/Themes/Default.xaml"/>

                <materialDesign:BundledTheme BaseTheme="Light" PrimaryColor="DeepPurple" SecondaryColor="Lime"/>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign2.Defaults.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <SolidColorBrush x:Key="MaterialDesign.Brush.Background" Color="#00b4c4"/>
            <SolidColorBrush x:Key="MaterialDesign.Brush.Primary.Foreground" Color="#dfeaeb"/>
            <SolidColorBrush x:Key="MaterialDesign.Brush.Primary" Color="#00C4B4"/>
            <SolidColorBrush x:Key="MaterialDesign.Brush.Secondary" Color="#00b4c4"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
